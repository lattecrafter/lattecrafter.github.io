---
import "../styles/global.css";
import { AstroSeo } from "@astrolib/seo";
---
<!---
Use AstroSeo in all the pages you want different Seo than the index page
-->
<AstroSeo
  title="lattecrafter"
  description="A blog about latte art, coffee, matcha and other drinks"
  canonical="https://lattecrafter.github.io"
  openGraph={{
    url: "https://lattecrafter.github.io",
    title: "lattecrafter - A blog about latte art, coffee, matcha and other drinks",
    description: "A blog about latte art, coffee, matcha and other drinks",
    images: [
      {
        url: "https://lattecrafter.github.io/opengraph/social-og.jpg",
        width: 1200,
        height: 630,
        alt: "Social open graph",
        type: "image/jpeg",
      },
      {
        url: "https://lattecrafter.github.io/opengraph/twitter-og.jpg",
        width: 4096,
        height: 4096,
        alt: "Twitter open graph",
        type: "image/jpeg",
      },
      { url: "https://lattecrafter.github.io/opengraph/social-og.jpg" },
      { url: "https://lattecrafter.github.io/opengraph/twitter-og.jpg" },
    ],
    site_name: "lattecrafter",
  }}
  twitter={{
    handle: "@lattecrafter",
    site: "@lattecrafter",
    cardType: "summary_large_image",
  }}
/>
